{
  "name": "skillshare-player-control",
  "displayName": "Skillshare Player Control",
  "version": "2.0.1",
  "description": "Basic keyboard controls for the Skillshare player.",
  "author": "avi12",
  "scripts": {
    "dev": "plasmo dev",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv2",
    "package-test": "plasmo package",
    "package": "web-ext build --source-dir build/chrome-mv3-prod --overwrite-dest --artifacts-dir dist-pack --filename skillshare-player-control-{version}.zip",
    "package:firefox": "web-ext build --source-dir build/firefox-mv2-prod --overwrite-dest --artifacts-dir dist-pack --filename skillshare-player-control-{version}_adapted_for_firefox.zip && pnpm package:stores-firefox",
    "package:self": "zip-self -o dist-pack/skillshare-player-control-{version}-source.zip",
    "build-pack": "pnpm build && pnpm package",
    "build-pack:test": "pnpm build && pnpm package-test",
    "build-pack:firefox": "pnpm build:firefox && pnpm package:firefox && pnpm package:self",
    "build-pack:all": "pnpm build-pack && pnpm build-pack:firefox",
    "run-browser": "web-ext run --no-config-discovery --start-url https://www.skillshare.com/classes/Practical-C-Programming-Beginner-Course/919943529 --source-dir build/chrome-mv3-dev --verbose --target",
    "run-chromium": "pnpm run-browser chromium",
    "run-chromium:rtl": "pnpm run-browser chromium --args=\"--lang=he\"",
    "run-firefox": "web-ext run --no-config-discovery --start-url https://www.skillshare.com/classes/Practical-C-Programming-Beginner-Course/919943529 --source-dir build/firefox-mv2-prod --verbose --target firefox-desktop",
    "run-edge:windows": "pnpm run-browser chromium --chromium-binary \"%ProgramFiles(x86)%\\Microsoft\\Edge\\Application\\msedge.exe\"",
    "run-opera:windows": "pnpm run-browser chromium --chromium-binary \"%LocalAppData%\\Programs\\Opera\\opera.exe\""
  },
  "dependencies": {
    "plasmo": "0.67.4",
    "sass": "^1.59.3",
    "svelte": "^3.57.0",
    "svelte-preprocess": "^5.0.3"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.3",
    "@types/chrome": "0.0.224",
    "@types/node": "18.15.5",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-avi12": "github:avi12/eslint-config-avi12",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-svelte3": "^4.0.0",
    "prettier": "2.8.6",
    "prettier-plugin-svelte": "^2.9.0",
    "typescript": "5.0.2",
    "web-ext": "^7.6.0",
    "zip-self": "^0.5.6"
  },
  "manifest": {
    "offline_enabled": true,
    "options_ui": {
      "open_in_tab": false,
      "browser_style": true
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "$PLASMO_PUBLIC_FIREFOX_EXT_ID"
      }
    }
  }
}
