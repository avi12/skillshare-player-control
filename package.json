{
  "name": "skillshare-player-control",
  "displayName": "Skillshare Player Control",
  "version": "2.0.1",
  "description": "Basic keyboard controls for the Skillshare player.",
  "author": "avi12",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "pack": "web-ext build --overwrite-dest --artifacts-dir dist_packed --source-dir build/chrome-mv3-prod --filename skillshare-player-control-{version}.zip",
    "pack:self": "zip-self -o dist_packed/skillshare-player-control-{version}_adapted_for_firefox-source.zip",
    "build-pack": "pnpm build && pnpm run pack",
    "build-pack:all": "pnpm build && pnpm run pack && pnpm pack:self",
    "run-browser": "web-ext run --no-config-discovery --start-url https://www.skillshare.com/classes/Practical-C-Programming-Beginner-Course/919943529 --verbose --target",
    "run:chrome": "pnpm run-browser chromium --source-dir build/chrome-mv3-dev",
    "run:firefox": "pnpm run-browser firefox-desktop --source-dir build/chrome-mv3-dev"
  },
  "dependencies": {
    "plasmo": "0.64.5",
    "svelte": "^3.55.1"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.1",
    "@types/chrome": "0.0.212",
    "@types/node": "18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.33.0",
    "eslint-config-avi12": "github:avi12/eslint-config-avi12",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-svelte3": "^4.0.0",
    "prettier": "2.8.4",
    "prettier-plugin-svelte": "^2.9.0",
    "typescript": "4.9.5",
    "web-ext": "^7.5.0",
    "zip-self": "^0.5.5"
  },
  "manifest": {
    "offline_enabled": true,
    "options_ui": {
      "open_in_tab": false,
      "browser_style": true
    }
  }
}
