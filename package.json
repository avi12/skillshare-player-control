{
  "name": "skillshare-player-control",
  "displayName": "Skillshare Player Control",
  "version": "2.0.4",
  "description": "Basic keyboard controls for the Skillshare player.",
  "author": "avi12",
  "scripts": {
    "dev": "plasmo dev",
    "dev:firefox": "plasmo dev --target=firefox-mv3",
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv2",
    "package": "web-ext build --source-dir build/chrome-mv3-prod --overwrite-dest --artifacts-dir dist-pack --filename skillshare-player-control-{version}.zip",
    "package:firefox": "web-ext build --source-dir build/firefox-mv2-prod --overwrite-dest --artifacts-dir dist-pack --filename skillshare-player-control-{version}_adapted_for_firefox.zip",
    "package:self": "zip-self -o dist-pack/skillshare-player-control-{version}-source.zip",
    "build-pack": "pnpm build && pnpm package",
    "build-pack:firefox": "pnpm build:firefox && pnpm package:firefox && pnpm package:self",
    "build-pack:all": "pnpm build-pack && pnpm build-pack:firefox",
    "run-browser": "web-ext run --start-url https://www.skillshare.com/classes/Practical-C-Programming-Beginner-Course/919943529 --verbose --target",
    "run-chromium": "pnpm run-browser chromium",
    "run-firefox": "pnpm run-browser firefox-desktop --source-dir build/firefox-mv3-dev",
    "run-edge:windows": "pnpm run-browser chromium --source-dir build/chrome-mv3-dev --chromium-binary \"%ProgramFiles(x86)%\\Microsoft\\Edge\\Application\\msedge.exe\"",
    "run-opera:windows": "pnpm run-browser chromium --source-dir build/chrome-mv3-dev --chromium-binary \"%LocalAppData%\\Programs\\Opera\\opera.exe\""
  },
  "dependencies": {
    "plasmo": "0.74.2",
    "sass": "^1.62.1",
    "svelte": "^3.59.1",
    "svelte-preprocess": "^5.0.4"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.4",
    "@types/chrome": "0.0.237",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-config-avi12": "github:avi12/eslint-config-avi12",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-svelte3": "^4.0.0",
    "prettier": "2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "typescript": "5.1.3",
    "web-ext": "^7.6.2",
    "zip-self": "^0.5.6"
  },
  "manifest": {
    "options_ui": {
      "open_in_tab": false,
      "browser_style": true
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "$PLASMO_PUBLIC_FIREFOX_EXT_ID"
      }
    }
  }
}
