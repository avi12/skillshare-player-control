{
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "arrow-parens": ["warn", "as-needed"],
    "no-async-promise-executor": "off",
    "quotes": [
      "warn",
      "double",
      {
        "allowTemplateLiterals": true
      }
    ],
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "semi": "warn",
    "prefer-const": "warn",
    "comma-dangle": "warn"
  }
}
